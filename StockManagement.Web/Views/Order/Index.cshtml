@model List<Order>
<div class="">
    <div class="card">
        <div class="card-header">
            Siparişler
        </div>
        <div class="card-body">
            <div class="table-responsive">


                <table id="dataTable" class="table table-bordered" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Sipariş Notu</th>
                            <th>Sipariş Durumu</th>
                            <th>Mağaza</th>
                            <th>Sipariş Tarihi</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>@order.Id</td>
                                <td>@order.OrderNote</td>
                                @switch (order.OrderStatus)
                                {
                                    case "0":
                                        <td>Sipariş Oluşturuldu</td>
                                        break;
                                    case "1":
                                        <td>Sipariş Onaylandı</td>
                                        break;
                                    default:
                                        break;
                                }
                                <td>@order.Store.StoreName</td>
                                <td>@order.CreatedDate.ToShortDateString() : @order.CreatedDate.ToShortTimeString()</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
