@model OrderCreateModel
<div class="">
    <div class="card">
        <div class="card-header">
            Sipariş Oluştur
        </div>
        <div class="card-body">
            <form class="user" method="post" asp-action="CreateOrder" asp-controller="Order" >
                <div class="form-group">
                    <input type="datetime-local" class="form-control form-control-user" id="exampleInputEmail" asp-for="@Model.OrderDate"
                           placeholder="Sipariş Tarihi">
                </div>
                <div class="form-group">
                    <textarea type="text" class="form-control form-control-user" id="exampleInputEmail" asp-for="@Model.OrderNote"
                           placeholder="Sipariş Notu"></textarea>
                </div>
                <button type="submit" asp-action="CreateOrder" asp-controller="Order" class="btn btn-success btn-icon-split">
                    <span class="icon text-white-50">
                        <i class="fas fa-check"></i>
                    </span>
                    <span class="text">Sipariş Oluştur</span>
                </button>
            </form>
        </div>
    </div>

</div>
